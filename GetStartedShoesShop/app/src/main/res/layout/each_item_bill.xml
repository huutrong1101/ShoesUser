<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/bill_item_selector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/round_view_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_weight="3"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bill_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pacifico"
                android:textColor="@color/colorSecondaryText"
                android:textSize="22sp"
                tools:text="Customer Name" />

            <TextView
                android:id="@+id/bill_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lobster"
                android:textColor="@color/colorSecondaryText"
                tools:text="1234567890" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bill_total_amount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:fontFamily="@font/charm_bold"
                android:gravity="right"
                android:textColor="@color/colorSecondaryText"
                android:textSize="24sp"
                tools:text="2000" />
            <TextView
                android:id="@+id/bill_date"
                tools:text="24-07-2017"
                android:textColor="@color/colorSecondaryText"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/bill_divider"
        android:layout_width="match_parent"
        android:layout_height="3.5dp"
        android:layout_marginBottom="10dp" />

</LinearLayout>